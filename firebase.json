{
  "hosting": {
    "target": "raidranks",
    "public": "dist/rsl",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/assets/images/champions/**",
      "**/assets/images/faction-banners/**",
      "**/assets/images/abilities/**",
      "**/assets/images/all/**",
      "**/assets/images/backup/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
