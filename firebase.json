{
  "hosting": [{
      "public": "public",
      "target": "prod",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "**/assets/images/all/**",
        "**/assets/images/abilities/**",
        "**/assets/images/champions/**",
        "**/assets/images/faction-banners/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "public": "public",
      "target": "dev",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "**/assets/images/all/**",
        "**/assets/images/abilities/**",
        "**/assets/images/champions/**",
        "**/assets/images/faction-banners/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "public": "public",
      "target": "qa",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "**/assets/images/all/**",
        "**/assets/images/abilities/**",
        "**/assets/images/champions/**",
        "**/assets/images/faction-banners/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }],
  "database": {
    "rules": "database.rules.json"
  }
}
